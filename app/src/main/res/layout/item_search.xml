<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_search_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="- -"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="鱼酷(万达店)"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:src="@drawable/icon_shanghu"
        app:layout_constraintBottom_toBottomOf="@+id/item_search_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_search_name"/>

    <TextView
        android:id="@+id/item_search_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="- -"
        android:textColor="@color/txt_yell"
        app:layout_constraintStart_toStartOf="@+id/item_search_name"
        app:layout_constraintTop_toBottomOf="@+id/item_search_name"
        tools:text="可拓展"/>

    <TextView
        android:id="@+id/item_search_pos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="14dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="- -"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_search_state"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView56"
        tools:text="地址地址地址地址地址"/>

    <TextView
        android:id="@+id/textView55"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@color/line_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/item_search_pos"/>

    <TextView
        android:id="@+id/textView56"
        android:layout_width="@dimen/dp_1"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="#5c5c5c"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_search_state"
        app:layout_constraintStart_toEndOf="@+id/item_search_state"/>
</android.support.constraint.ConstraintLayout>