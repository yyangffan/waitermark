<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_white"
    >

    <EditText
        android:id="@+id/bohui_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_corner_kuang"
        android:gravity="top"
        android:hint="请输入驳回原因"
        android:maxLength="25"
        android:minHeight="@dimen/dp_100"
        android:padding="@dimen/dp_8"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bohui_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_remind_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="取消"
            android:textColor="@color/txt_week"
            android:textSize="16sp"/>

        <View
            android:id="@+id/dialog_remind_btline"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/xml_bg"/>

        <TextView
            android:id="@+id/dialog_remind_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="确认"
            android:textColor="@color/txt_week"
            android:textSize="16sp"/>

    </LinearLayout>


</RelativeLayout>