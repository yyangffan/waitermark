<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="@null"
                android:gravity="center">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <com.superc.yyfflibrary.views.lowhurdles.TabIconView
            android:id="@+id/iv_tab_icon"
            android:layout_width="@dimen/tab_icon_width"
            android:layout_height="@dimen/tab_icon_height"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:scaleType="centerInside"
            tools:src="@drawable/icon_gerenzhongxin_xuanzhong"/>

        <TextView
            android:id="@+id/iv_tab_red"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/bg_circle_red"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            tools:text="3"
            android:textColor="@color/white"
            android:textSize="8sp"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="2dp"
        android:textColor="@color/black"
        android:textSize="12.5sp"/>

</RelativeLayout>