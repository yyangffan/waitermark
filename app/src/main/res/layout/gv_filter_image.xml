<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp_3"
        android:padding="@dimen/dp_1">

        <LinearLayout
            android:id="@+id/edtjichu_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_corner_kuang"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/edtjichu_tianjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/icon_tianjia"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="上传照片"
                android:textColor="@color/txt_granine"
                android:textSize="10sp"
                />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/fiv"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:scaleType="centerCrop"
                android:src="@color/color_f6"/>

            <LinearLayout
                android:id="@+id/ll_del"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/icon_shanchutupian"/>
            </LinearLayout>
        </FrameLayout>


        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/buybuybuy"
            android:drawableLeft="@drawable/video_icon"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingTop="8dp"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>