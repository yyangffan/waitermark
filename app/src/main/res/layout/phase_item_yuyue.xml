<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/xml_bg"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/phase_itemyuyue_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/phase_itemyuyue_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@drawable/phase_rb_sel"
            android:focusable="false"
            android:checked="true"
            android:gravity="left|center_vertical"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_15"
            android:text="需要预约，消费高峰期可能需要等位"
            android:textColor="@color/phase_mine_txt"/>

        <ImageView
            android:id="@+id/phase_itemyuyue_imgv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_weixuanzhong"
            android:paddingRight="@dimen/dp_10"
            android:gravity="left|center_vertical"
         />

    </LinearLayout>

</LinearLayout>