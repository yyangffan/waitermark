<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_shoukcode_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dp_10"
        android:text="- -"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="收款码1"/>

    <TextView
        android:id="@+id/item_shoukcode_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="- -"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_shoukcode_name"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="123456789"/>

    <TextView
        android:id="@+id/textView165"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/line_color"
        app:layout_constraintEnd_toEndOf="@+id/item_shoukcode_num"
        app:layout_constraintStart_toStartOf="@+id/item_shoukcode_name"
        app:layout_constraintTop_toBottomOf="@+id/item_shoukcode_name"/>
</android.support.constraint.ConstraintLayout>