<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/phase_dialog_white">

    <ImageView
        android:id="@+id/dialog_week_imgv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dialog_week_title"
        android:layout_alignBottom="@+id/dialog_week_title"
        android:paddingLeft="@dimen/dp_15"
        android:src="@drawable/icon_guanbi"/>

    <TextView
        android:id="@+id/dialog_week_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="请选择自定义时间"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/dialog_bt_weeksure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dialog_week_title"
        android:layout_alignParentRight="true"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_15"
        android:text="确定"
        android:textColor="#548df6"
        android:textSize="13sp"/>

    <View
        android:id="@+id/bt_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/dialog_week_title"
        android:background="#e1e1e1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_line"
        android:background="@color/xml_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_week_monday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_1"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="周一"
            android:textColor="@color/txt_week"/>

        <TextView
            android:id="@+id/dialog_week_tuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_1"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="周二"
            android:textColor="@color/txt_week"/>

        <TextView
            android:id="@+id/dialog_week_wednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_1"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="周三"
            android:textColor="@color/txt_week"/>

        <TextView
            android:id="@+id/dialog_week_thurday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_1"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="周四"
            android:textColor="@color/txt_week"/>

        <TextView
            android:id="@+id/dialog_week_firday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_1"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="周五"
            android:textColor="@color/txt_week"/>

        <TextView
            android:id="@+id/dialog_week_staday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_1"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="周六"
            android:textColor="@color/txt_week"/>

        <TextView
            android:id="@+id/dialog_week_sunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_1"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="周日"
            android:textColor="@color/txt_week"/>


    </LinearLayout>


</RelativeLayout>